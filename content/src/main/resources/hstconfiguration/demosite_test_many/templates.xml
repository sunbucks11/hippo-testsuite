<sv:node sv:name="hst:templates" xmlns:sv="http://www.jcp.org/jcr/sv/1.0">
  <sv:property sv:name="jcr:primaryType" sv:type="Name">
    <sv:value>hst:templates</sv:value>
  </sv:property>
  <sv:node sv:name="homepage.ftl">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>hst:template</sv:value>
    </sv:property>
    <sv:property sv:name="hst:script" sv:type="String">
      <sv:value>&lt;#assign
            hst=JspTaglibs["http://www.hippoecm.org/jsp/hst/core"]&gt;
            &lt;div class="yui-u"&gt; &lt;h1&gt;${document.title}&lt;/h1&gt;
            &lt;p&gt;${document.summary}&lt;/p&gt; &lt;@hst.html 
            hippohtml=document.html/&gt; &lt;p&gt; &lt;/p&gt;
            &lt;#if "${document.resource!}" != ""&gt;
            &lt;@hst.link var="resource"
            hippobean=document.resource /&gt; &lt;#if
            "${resource!}" != ""&gt; &lt;a
            href="${resource}"&gt;${document.resource.name}&lt;/a&gt;
            &lt;/#if&gt; &lt;/#if&gt; &lt;div&gt; &lt;@hst.include ref="todolist"/&gt;
            &lt;/div&gt; &lt;div class="bannersHome"&gt; &lt;@hst.include
            ref="banners"/&gt; &lt;/div&gt; &lt;div class="bannersHome"&gt;
            &lt;@hst.include ref="morebanners"/&gt; &lt;/div&gt; 
           
            &lt;p
            style="height: 30em;"&gt; &lt;/p&gt; &lt;/div&gt;</sv:value>
    </sv:property>
  </sv:node>
  
  <sv:node sv:name="sitesoverview">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>hst:template</sv:value>
    </sv:property>
    <sv:property sv:name="hst:renderpath" sv:type="String">
      <sv:value>jsp/components/main/sitesoverview.jsp</sv:value>
    </sv:property>
  </sv:node>
  
  
</sv:node>